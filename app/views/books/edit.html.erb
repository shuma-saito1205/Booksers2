<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, value: @book.title, autofocus: true, id:"inputTitle" %>

  <label for="inputbody">Opinion</label>
  <%= f.text_area :body, value: @book.body, autofocus: true, id:"inputbody"%>
  <%= f.submit "Submit" %>
<% end %>

