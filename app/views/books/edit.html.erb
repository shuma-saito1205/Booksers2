<div class="contaiaer">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h2 class="mt3">Editing Book</h2>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %> 
      <%= form_with model: @book do |f| %>
      <div class="field mt-3 ">
        <label for="inputTitle">Title</label><br />
        <%= f.text_field :title, value: @book.title, autofocus: true, id:"inputTitle" %>
      </div>
      <div class="field mt-3 ">
        <label for="inputbody">Opinion</label></br />
        <%= f.text_area :body, value: @book.body, autofocus: true, id:"inputbody"%>
      </div>
      <div class="actions mt-3">
        <%= f.submit "Submit", class:"btn btn-success btn-sm" %>
        <% end %>
      </div>
      <div class="mt-3">
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>

