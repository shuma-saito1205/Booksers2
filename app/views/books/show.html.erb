<%= render '/show', user: @user %>
<%= render 'books/new', book: @book %>
<h1>Book detail</h1>
  <%= @book.title %>
  <%= @book.body %>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path %>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
<% end %>