<div class="container">
  <div class="row">
    <div class="col-md-3">
    <h2>New book</h2>
    <%= form_with model: @book, url: books_path, local: true do |f| %>
      <a>Title</a>
      <%= f.text_field :title %>
      <a>Opinion</a>
      <%= f.text_area :body %>

      <div class="actions">
        <%= f.submit "Submit", class:"btn btn-success btn-sm" %>
      </div>
    <% end %>
  </div>
</div>
