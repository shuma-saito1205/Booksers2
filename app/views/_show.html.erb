<div>
<h2>User Info</h2>
<% if "#{controller_name}/#{action_name}" == "users/show" || "#{controller_name}/#{action_name}" == "books/show" %>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th h3>name </h3>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th h3>introduction</h3>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
<% else %>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th h3>name </h3>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <th h3>introduction</h3>
        <td><%= current_user.introduction %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<div class="row">
  <% if user.id == current_user.id %>
      <%= link_to edit_user_path(current_user), class:'btn btn-outline-secondary btn-brock w-100', role: 'button' do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
  <% else %>
    <div class="button">
      <%= link_to user_path(current_user), class:'btn btn-outline-secondary btn-brock w-100', role: 'button' do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
  <% end %>
</div>

  <h2>New book</h2>
  <%= form_with model: @book, url: books_path, local: true do |f| %>
    <a>Title</a>
    <%= f.text_field :title %>
    <a>Opinion</a>
    <%= f.text_area :body %>
  <div class="actions">
    <%= f.submit "Submit", class:"btn btn-success btn-sm" %>
  </div>
  <% end %>
  
</div>